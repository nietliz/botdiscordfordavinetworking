<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalhes do Usuário</title>
    <style>
        body { font-family: Arial, sans-serif; max-width: 900px; margin: 40px auto; padding: 0 16px; }
        .topbar { display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-bottom: 16px; }
        .topbar h2 { margin: 0; font-size: 22px; }
        .actions { display: flex; gap: 12px; align-items: center; }
        .btn { padding: 8px 16px; text-decoration: none; border-radius: 4px; font-size: 14px; }
        .btn-secondary { background: #f7f7f7; color: #333; border: 1px solid #ddd; }
        .btn-danger { background: #dc3545; color: white; border: 1px solid #dc3545; }
        .btn-danger:hover { background: #c82333; }
        .card { border: 1px solid #ddd; border-radius: 6px; padding: 16px; background: #fff; }
        .row { display: flex; gap: 16px; flex-wrap: wrap; }
        .col { flex: 1 1 260px; }
        .label { color: #666; font-size: 13px; }
        .value { font-size: 16px; }
        ul { padding-left: 18px; }
        @media (max-width: 600px) {
            .topbar { flex-direction: column; align-items: stretch; }
            .topbar h2 { font-size: 20px; }
        }
    </style>
</head>
<body>
    <div class="topbar">
        <h2>Detalhes do Usuário</h2>
        <div class="actions">
            <a href="/users" class="btn btn-secondary">Voltar</a>
            <form method="post" action="/users/<%= id %>/delete" style="display: inline;" onsubmit="return confirm('Tem certeza que deseja excluir este usuário? Esta ação não pode ser desfeita.')">
                <button type="submit" class="btn btn-danger">Excluir Usuário</button>
            </form>
        </div>
    </div>
    <div class="card">
        <div class="row">
            <div class="col">
                <div class="label">ID</div>
                <div class="value"><%= id %></div>
            </div>
            <div class="col">
                <div class="label">dc_username</div>
                <div class="value"><%= (user && user.dc_username) ? user.dc_username : '(não informado)' %></div>
            </div>
        </div>
        <div style="margin-top:16px;">
            <div class="label">Redes sociais</div>
            <% if (user && user.social_networks) { %>
                <% const sn = user.social_networks; %>
                <ul>
                    <% for (var k in sn) { if (sn.hasOwnProperty(k) && k !== 'ok') { %>
                        <li><strong><%= k %>:</strong> <%= sn[k] %></li>
                    <% } } %>
                </ul>
            <% } else { %>
                <div class="value">(não informado)</div>
            <% } %>
        </div>
        <div style="margin-top:16px;">
            <div class="label">Outros dados</div>
            <ul id="outrosDadosList">
                <% for (var key in user) { if (user.hasOwnProperty(key) && ['_id','dc_username','social_networks','ok'].indexOf(key) === -1) { %>
                    <li>
                        <strong><%= key %>:</strong>
                        <% if (typeof user[key] === 'string' || typeof user[key] === 'number' || typeof user[key] === 'boolean') { %>
                            <%= user[key] %>
                        <% } else { %>
                            <em>(conteúdo estruturado)</em>
                        <% } %>
                    </li>
                <% } } %>
            </ul>
            <div id="outrosDadosControls" style="display: flex; justify-content: space-between; align-items: center; gap: 12px; margin-top: 8px;">
                <button id="outrosPrev" class="btn btn-secondary" type="button">Anterior</button>
                <button id="outrosNext" class="btn btn-secondary" type="button">Próximo</button>
            </div>
        </div>
    </div>
</body>
<script>
    (function () {
        var list = document.getElementById('outrosDadosList');
        if (!list) return;
        var items = Array.prototype.slice.call(list.querySelectorAll('li'));
        var prevBtn = document.getElementById('outrosPrev');
        var nextBtn = document.getElementById('outrosNext');
        var controls = document.getElementById('outrosDadosControls');
        var pageSize = 10;
        var currentPage = 0;
        var totalPages = Math.ceil(items.length / pageSize) || 1;

        function renderPage(page) {
            var start = page * pageSize;
            var end = start + pageSize;
            for (var i = 0; i < items.length; i++) {
                items[i].style.display = (i >= start && i < end) ? '' : 'none';
            }
            prevBtn.style.display = (page <= 0) ? 'none' : '';
            nextBtn.style.display = (page >= totalPages - 1) ? 'none' : '';
            controls.style.display = (items.length > pageSize) ? 'flex' : 'none';
        }

        if (prevBtn && nextBtn) {
            prevBtn.addEventListener('click', function () {
                if (currentPage > 0) {
                    currentPage--;
                    renderPage(currentPage);
                }
            });
            nextBtn.addEventListener('click', function () {
                if (currentPage < totalPages - 1) {
                    currentPage++;
                    renderPage(currentPage);
                }
            });
        }

        renderPage(currentPage);
    })();
</script>
</html>
